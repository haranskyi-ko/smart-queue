@using Models.Enums_queue.Models
<!-- Components/QueueItemCard.razor -->

<div class="card mb-2 @(Highlight ? "border-primary shadow-sm" : "")">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <h6 class="card-title mb-0">@Item.User.Name</h6>
            <small class="text-muted">@Item.User.PhoneNumber</small>
        </div>
        <span class="badge @StatusColor">@Item.Status</span>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public QueueItem Item { get; set; } = default!;
    [Parameter] public bool Highlight { get; set; }

    private string StatusColor => Item.Status switch
    {
        QueueStatus.Waiting => "bg-secondary",
        QueueStatus.Notified => "bg-warning",
        QueueStatus.InService => "bg-info",
        QueueStatus.Completed => "bg-success",
        _ => "bg-light text-dark"
    };
}
